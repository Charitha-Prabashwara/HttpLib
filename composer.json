{
   
    "name": "charithaprabhashwara/httplib",
    "description": "",
    "keywords": [
        "charithaprabhashwara",
        "httplib"
    ],
    "homepage": "https://github.com/charithaprabhashwara/httplib",
    "license": "LGPL-3.0-or-later",
    "type": "library",
    "authors": [
        {
            "name": "Charitha Prabhashwara",
            "email": "prabhashwara.seu@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpdocumentor/shim": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "CharithaPrabhashwara\\HttpLib\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CharithaPrabhashwara\\HttpLib\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "docs": "phpdoc"

    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpdocumentor/shim": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist"


    },
    "extra": {
        "exclude": [
          "/docs/",
          "/guides/",
          "/phpdoc.dist.xml"
        ]
      }
}
